package Banco;

/**
 *
 * @author limam
 */
public class Conta {
    public String tipoConta;
    public int DataAbertura;
    public int saldo;
    public double Rendimento;

    public String getTipoConta() {
        return tipoConta;
    }

    public void setTipoConta(String tipoConta) {
        this.tipoConta = tipoConta;
    }

    public int getDataAbertura() {
        return DataAbertura;
    }

    public void setDataAbertura(int DataAbertura) {
        this.DataAbertura = DataAbertura;
    }

    public int getSaldo() {
        return saldo;
    }

    public void setSaldo(int saldo) {
        this.saldo = saldo;
    }

    public double getRendimento() {
        return Rendimento;
    }

    public void setRendimento(double Rendimento) {
        this.Rendimento = Rendimento;
    }
    public String sacar(int valor){
        if(valor<=saldo){
            saldo = saldo - valor;
            return "Saque Realizado com sucesso!";
        }
        else{
            return "Saldo Insufiente";
            
        }
     
    }
    public String depositar(int valor){
    if(valor>0){
        saldo = saldo + valor;
        System.out.println("Depósito realizado com sucesso!");
        return ("Seu novo saldo é de: "+ saldo);
     
        
    }
    else{
        return "Digite um valor válido!";
    }
       
    }
    
}
